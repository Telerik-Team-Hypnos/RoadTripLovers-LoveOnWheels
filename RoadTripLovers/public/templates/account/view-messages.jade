.modal.fade#view-messages-modal(role="dialog" aria-hidden="true")
    .modal-dialog
        .modal-content
            .modal-header
                span Messages
                button.close(data-dismiss="modal") x
            .modal-body
                ul#view-user-mesages
                    li(ng-repeat="message in logedUserMessages") {{message.sender.username}} on {{message.postTime}} : {{message.title}} - {{message.body}}
                a(href="" ng-click="loadOlderMessages()") Older..
            .modal-footer
                button.btn.btn-default(data-dismiss="modal") Close